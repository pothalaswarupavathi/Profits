import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner in=new Scanner(System.in);
		int t=in.nextInt();
      
		for(int i=0;i<t;i++){
		    
		    int n=in.nextInt();
		    int x=in.nextInt();
		    int profit=0;
		    for(int j=x+1; j<=n;j++){
		    profit+=j-x;
		    
		}
		System.out.println(profit);// your code goes here
	}
	}
}
